{
    "name": "Project X",
    "image": "mcr.microsoft.com/devcontainers/go:1.24-bookworm",
    "workspaceFolder": "/project-x",
    "workspaceMount": "source=${localWorkspaceFolder},target=/project-x,type=bind,consistency=cached",
    "remoteEnv": {
      "PROJECT_X_LOG_DIR": "${containerWorkspaceFolder}/.logs"
    },
    "onCreateCommand": "go mod download",
    "customizations": {
      "vscode": {
        "settings": {},
        "extensions": [
            "streetsidesoftware.code-spell-checker"
        ]
      }
	}
}